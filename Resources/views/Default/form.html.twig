{% form_theme form 'BCCCronManagerBundle:Form:fields.html.twig' %}

<div class="row">
    <em class="span">
        {{ 'Keep in mind that cron user is %user% and its root directory is %root%.' | trans({'%user%': '<strong>'~wwwUser.name~'</strong>', '%root%': '<strong>'~wwwUser.dir~'</strong>'}, 'BCCCronManagerBundle') | raw }}
    </em>
</div>
<br/>

<div class="row">
    {{ form_errors(form.minute) }}
    {{ form_errors(form.hour) }}
    {{ form_errors(form.dayOfMonth) }}
    {{ form_errors(form.month) }}
    {{ form_errors(form.dayOfWeek) }}
</div>

<div class="row">
    <div class="span1 control-group {{ form.minute.vars.errors ? 'error' : ''}}">
        {{ form_widget(form.minute, {'attr':{
                'class': 'time-input span1',
                'data-original-title': 'Minute' | trans ({}, 'BCCCronManagerBundle')
            }})
        }}
    </div>
    <div class="span1 control-group {{ form.hour.vars.errors ? 'error' : ''}}">
        {{ form_widget(form.hour, {'attr':{
                'class': 'time-input span1',
                'data-original-title': 'Hour' | trans ({}, 'BCCCronManagerBundle')
            }})
        }}
    </div>
    <div class="span1 control-group {{ form.dayOfMonth.vars.errors ? 'error' : ''}}">
        {{ form_widget(form.dayOfMonth, {'attr':{
                'class': 'time-input span1',
                'data-original-title': 'Day Of Month' | trans ({}, 'BCCCronManagerBundle')
            }})
        }}
    </div>
    <div class="span1 control-group {{ form.month.vars.errors ? 'error' : ''}}">
        {{ form_widget(form.month, {'attr':{
                'class': 'time-input span1',
                'data-original-title': 'Month' | trans ({}, 'BCCCronManagerBundle')
            }})
        }}
    </div>
    <div class="span1 control-group {{ form.dayOfWeek.vars.errors ? 'error' : ''}}">
        {{ form_widget(form.dayOfWeek, {'attr':{
                'class': 'time-input span1',
                'data-original-title': 'Day Of Week' | trans ({}, 'BCCCronManagerBundle')
            }})
        }}
    </div>
    <div class="btn-group pull-right time-menu" data-original-title="{{ 'Time Presets' | trans({}, 'BCCCronManagerBundle') }}">
        <span class="btn dropdown-toggle" data-toggle="dropdown">
            <i class="icon-pencil"></i>
            <span class="caret"></span>
        </span>
        <ul class="dropdown-menu">
            <li><a class="time-preset" href="#" id="hourly">{{ 'Hourly' | trans({}, 'BCCCronManagerBundle') }}</a></li>
            <li><a class="time-preset" href="#" id="daily">{{ 'Daily' | trans({}, 'BCCCronManagerBundle') }}</a></li>
            <li><a class="time-preset" href="#" id="weekly">{{ 'Weekly' | trans({}, 'BCCCronManagerBundle') }}</a></li>
            <li><a class="time-preset" href="#" id="monthly">{{ 'Monthly' | trans({}, 'BCCCronManagerBundle') }}</a></li>
            <li><a class="time-preset" href="#" id="yearly">{{ 'Yearly' | trans({}, 'BCCCronManagerBundle') }}</a></li>
        </ul>
    </div>
</div>

<div class="row command-input control-group {{ form.command.vars.errors ? 'error' : ''}}">
    {{ form_errors(form.command) }}
    <div class="input-prepend span">
        <span class="add-on">
            {{ form_label(form.command, 'Command', {'translation_domain': 'BCCCronManagerBundle', 'attr':{'class': 'span1'}}) }}
        </span>
        {{- form_widget(form.command, {'attr':{'class': 'span10'}}) }}
    </div>
    <span class="btn command-preset pull-right" id="symfony-command" value="{{ symfonyCommand }}"
          data-original-title="{{ 'Symfony Command' | trans({}, 'BCCCronManagerBundle') }}">
        <i class="icon-pencil"></i>
    </span>
</div>

<div class="row control-group {{ form.logFile.vars.errors ? 'error' : ''}}">
    {{ form_errors(form.logFile) }}
    <div class="input-prepend span">
        <span class="add-on">
            {{ form_label(form.logFile, 'Log File', {'translation_domain': 'BCCCronManagerBundle', 'attr':{'class': 'span1'}}) }}
        </span>
        {{- form_widget(form.logFile, {'attr':{'class': 'span10'}}) }}
    </div>
    <span class="btn log-preset pull-right" value="{{ logDir }}"
          data-original-title="{{ 'form.preset.symfonyLog' | trans({}, 'BCCCronManagerBundle') }}">
        <i class="icon-pencil"></i>
    </span>
</div>

<div class="row control-group {{ form.errorFile.vars.errors ? 'error' : ''}}">
    {{ form_errors(form.errorFile) }}
    <div class="input-prepend span">
        <span class="add-on">
            {{ form_label(form.errorFile, 'Error File', {'translation_domain': 'BCCCronManagerBundle', 'attr':{'class': 'span1'}}) }}
        </span>
        {{- form_widget(form.errorFile, {'attr':{'class': 'span10'}}) }}
    </div>
    <span class="btn log-preset pull-right" value="{{ logDir }}"
          data-original-title="{{ 'Symfony log directory' | trans({}, 'BCCCronManagerBundle') }}">
        <i class="icon-pencil"></i>
    </span>
</div>

<div class="row control-group {{ form.comment.vars.errors ? 'error' : ''}}">
    {{ form_errors(form.comment) }}
    <div class="input-prepend span">
        <span class="add-on">
            {{ form_label(form.comment, 'Comment', {'translation_domain': 'BCCCronManagerBundle', 'attr':{'class': 'span1'}}) }}
        </span>
        {{- form_widget(form.comment, {'attr':{'class': 'span10'}}) }}
    </div>
</div>

{{ form_rest(form) }}
